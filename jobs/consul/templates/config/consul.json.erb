{
  "data_dir": "/var/vcap/store/consul",
  "ui_dir": "/var/vcap/packages/consul-ui",
  "node_name": "<%= spec.deployment %>-<%= name %>-<%= index %>",
  <% if_p("consul.servers") do |servers| %>
  "server": <%= p("consul.server") %>,
  <% end.else do %>
  "bootstrap": true,
  "server": true,
  <% end %>
  <% if_p("consul.bootstrap_address") do |bootstrap| %>
  "start_join": ["<%= bootstrap %>"],
  <% end %>

  "bind_addr": "0.0.0.0",
  "client_addr": "0.0.0.0",
  "domain": "consul",
  "leave_on_terminate": false,
  "log_level": "INFO"
}
